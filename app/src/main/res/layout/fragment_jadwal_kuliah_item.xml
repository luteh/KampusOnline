<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SelectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    app:cardBackgroundColor="@color/colorBackgroundDefault"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_default"
        android:paddingBottom="@dimen/margin_default">

        <TextView
            android:id="@+id/tvJadwalKuliahNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small_14"
            tools:text="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvJadwalKuliahMatkul"
                style="@style/TextDefaultBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Manajemen Perusahaan Industri" />

            <TextView
                android:id="@+id/tvJadwalKuliahDosen"
                style="@style/TextDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                tools:text="Lia Maulia Indrayani, DR. Hj., Dra., M.Hum." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvJadwalKuliahKode"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="0611204" />

                <TextView
                    android:id="@+id/tvJadwalKuliahSks"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="2 SKS" />

                <TextView
                    android:id="@+id/tvJadwalKuliahKelas"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Kelas A" />

                <TextView
                    android:id="@+id/tvJadwalKuliahRuangan"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="B409" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvJadwalKuliahHari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_small_14"
                tools:text="Selasa" />

            <TextView
                android:id="@+id/tvJadwalKuliahStartClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/TextDefaultGreen"
                tools:text="08.50" />

            <TextView
                android:id="@+id/tvJadwalKuliahFinishClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/TextDefaultRed"
                tools:text="10.30" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>